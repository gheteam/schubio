<section>
  <h1>Sign in</h1>

  <%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=>"ym-form linearize-form ym-full"} do |f| %>
    <div class="ym-fbox-text">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <div class="ym-fbox-text">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="ym-fbox-check">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me %>
      </div>
    <% end -%>

    <div class="ym-fbox-button">
      <%= f.submit "Sign in" %>
    </div>
  <% end %>

  <p>
    <%= render "devise/shared/links" %>
  </p>
</section>

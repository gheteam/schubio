!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %title
      = page_title yield(:page_title)
    = include_stylesheets :default, :media => 'all'
    = include_javascripts :default
    = csrf_meta_tag
  %body
    #mainContainer
      #main
        #headerContainer
          #header
            #headerTitleContainer
              %h1{:id => 'siteName'}
                = link_to "Dennis Schubert", root_path
              %h2{:id => 'siteSlogan'}
                blog, projects and nerdiness
            #headerSocialContainer
              #headerSocial
                = link_to image_tag("/images/icons/raw/icon-twitter.svg", :size => "48x48"), "http://twitter.com/denschub", {:target => "_blank", :class => "twitterIcon", :title => "@denschub auf Twitter"}
                = link_to image_tag("/images/icons/raw/icon-diaspora.svg", :size => "48x48"), "https://pod.geraspora.de/people/12", {:target => "_blank", :class => "diasporaIcon", :title => "Dennis Schubert bei Diaspora"}
                = link_to image_tag("/images/icons/raw/icon-rss.svg", :size => "48x48"), "#", {:target => "_blank", :class => "rssIcon", :title => "RSS-Feed des Blogs"}
        #navBarContainer
          %nav{:id => "navBar"}
            #navBarLeft
              %ul
                %li
                  = link_to "Home", root_path
                  |
                %li
                  = link_to "About me", page_clean_path({:id => "about_me"})
            -#
              #navBarRight
                %form{:method => "post", :action => "#", :id => "magicbar"}
                  %div
                    %div{:id => "mbTermIcon"}
                    %input{:type => "text", :name => "searchphrase", :id => "mbTerm"}
                    %input{:type => "submit", :value => "Suchen", :id => "mbSubmit"}
        = yield
        #paginationContainer
          %nav{:id => "pagination"}
            &nbsp;
        #footerContainer
          %footer{:id => "footer"}
            %section{:id => "footboxLeft", :class => "footerBox"}
              %nav{:id => "footerNavigation"}
                %ul
                  %li
                    = link_to "Home", root_path
                  %li
                    = link_to "About me", page_clean_path({:id => "about_me"})
                  - if user_signed_in?
                    %li
                      = link_to 'Sign out', destroy_user_session_path, :method => :delete
            %section{:id => "footboxCenter", :class => "footerBox"}
              %p
                17 Jahre junger Nerd mit Sozialleben. Nutzer und Entwickler von
                = link_to "Open Source-Software.", "http://github.com/denschub", {:target => "_blank"}
                Mitentwickler eines dezentralen sozialen Netzwerkes,
                = link_to "Diaspora.", "http://github.com/diaspora/diaspora", {:target => "_blank"}
                Vorliebe fÃ¼r Webentwicklung.
            %section{:id => "footboxRight", :class => "footerBox"}
              %div
                = link_to image_tag("/images/icons/raw/cc-icon-cc.svg", :size => "30x30"), "http://creativecommons.org/licenses/by-sa/3.0/deed.de", {:target => "_blank", :title => "Der Inhalt steht unter einer Creative-Commons-Lizenz"}
                = link_to image_tag("/images/icons/raw/cc-icon-by.svg", :size => "30x30"), "http://creativecommons.org/licenses/by-sa/3.0/deed.de", {:target => "_blank", :title => "Der Inhalt darf mit Namensnennung weiterverwendet werden"}
                = link_to image_tag("/images/icons/raw/cc-icon-sa.svg", :size => "30x30"), "http://creativecommons.org/licenses/by-sa/3.0/deed.de", {:target => "_blank", :title => "Die Weitergabe des Inhalts muss unter der gleichen Lizenz erfolgen"}
